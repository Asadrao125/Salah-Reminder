<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:gravity="center_horizontal"
        android:left="2dp"
        android:right="2dp">

        <shape android:shape="rectangle">
            <corners android:radius="80dp" />
        </shape>
        <!-- <solid android:color="#dfe1de" /> -->

    </item>

    <item
        android:bottom="6dp"
        android:gravity="center_horizontal">
        <shape android:shape="rectangle">

            <corners android:radius="80dp" />
            <gradient
                android:angle="270"
                android:endColor="#52a3b8"
                android:startColor="#297790" />
            <solid android:color="#3f8ba2" />
        </shape>
    </item>

</layer-list>
