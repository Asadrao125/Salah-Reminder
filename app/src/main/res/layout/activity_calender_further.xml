<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".Activities.CalenderFurtherActivity">

    <LinearLayout
        android:id="@+id/shape"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/set_timing_shape"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_Namaz_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View / Update Prayers"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/bottom_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shape">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="@drawable/shape"
            android:padding="15dp">

            <TextView
                android:id="@+id/current_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Day: "
                android:textColor="@color/colorWhite"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tvDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 - "
                android:textColor="@color/colorWhite"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 - "
                android:textColor="@color/colorWhite"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tvYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020"
                android:textColor="@color/colorWhite"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_fajar"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Fajar"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/fajar_btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/red_border"
                android:padding="5dp"
                android:text="Yes / No"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_zuhar"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Zuhar"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/zuhar_btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/red_border"
                android:padding="5dp"
                android:text="Yes / No"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_asar"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Asar"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/asar_btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/red_border"
                android:padding="5dp"
                android:text="Yes / No"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_maghrib"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Maghrib"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/maghrib_btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/red_border"
                android:padding="5dp"
                android:text="Yes / No"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_isha"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Isha"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp" />

            <CheckBox
                android:id="@+id/isha_btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/red_border"
                android:padding="5dp"
                android:text="Yes / No"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:id="@+id/ad_view_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        </FrameLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>