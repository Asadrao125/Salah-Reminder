                        android:text="Zuhar"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="4"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="4"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="2"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="2"
                        android:textColor="#297790" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/asar_rakaat"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Asar"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="4"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="4"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/maghrib_rakaast"
                        android:layout_width="100dp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Magrib"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="3"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="2"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="2"
                        android:textColor="#297790" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/isha_rakaat"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Isha"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="4"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="4"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="2"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="4"
                        android:textColor="#297790" />

                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/namaz_info_shape"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="All Postures"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp" />

                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:text=" 1.\tTwo Sunnah \n 2.\tTwo Farz"/>-->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:src="@drawable/complete_postures" />

                <TextView
                    android:id="@+id/tvNewActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Method of Salaat"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!--  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" -->

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:id="@+id/ad_view_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        </FrameLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

