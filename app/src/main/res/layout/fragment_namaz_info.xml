<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.NamazInfo">

    <LinearLayout
        android:id="@+id/shape_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/set_timing_shape"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Timings For Prayer"
            android:textColor="@color/colorWhite"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lower_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shape_layout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/lower_screen">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fajar"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/arialnarrow7"
                    android:text="@string/fajar"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tvFajar"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/digital"
                    android:text="00 : 00 AM"
                    android:textColor="@color/red"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Zuhar"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/arialnarrow7"
                    android:text="Zuhar: "
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tvZuhar"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/digital"

                    android:text="00 : 00 AM"
                    android:textColor="@color/red"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Asar"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/arialnarrow7"
                    android:text="Asar: "
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tvAsar"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/digital"
                    android:text="00 : 00 AM"
                    android:textColor="@color/red"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Maghrib"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/arialnarrow7"
                    android:text="Maghrib: "
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tvMaghrib"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/digital"
                    android:text="00 : 00 AM"
                    android:textColor="@color/red"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Isha"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/arialnarrow7"
                    android:text="Isha: "
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tvIsha"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/digital"
                    android:text="00 : 00 AM"
                    android:textColor="@color/red"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>