<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Fragments.NamazInfoFragment">

    <LinearLayout
        android:id="@+id/shape"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/set_timing_shape"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_Namaz_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Namaz Rakaat"
            android:textColor="@color/colorWhite"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shape">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/table_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape">

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Salaat"
                        android:textColor="#fff" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Sunnat"
                        android:textColor="#fff" />

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Farz"
                        android:textColor="#fff" />

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Sunnat"
                        android:textColor="#fff" />

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Nafil"
                        android:textColor="#fff" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/fajar_raqat"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="Fajar"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="2"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:text="2"
                        android:textColor="#297790" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:padding="10dip"
                        android:textColor="#000000" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/zuhar_rakaat"
                        android:layout_weight="1"
                        android:background="@drawable/border"
