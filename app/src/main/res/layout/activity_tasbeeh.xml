<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.TasbeehActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolBarTheme"
        android:background="@color/app_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:id="@+id/imgBack"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Digital Tasbeeh"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="#000"
        android:id="@+id/textView_progress_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

       <LinearLayout
           android:layout_margin="20dp"
           android:gravity="center"
           android:layout_below="@+id/textView_cummulative_count"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <Button
               android:layout_marginRight="20dp"
               android:id="@+id/button_count"
               style="@style/Widget.AppCompat.Button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@color/app_color"
               android:textColor="@color/colorWhite"
               android:layout_above="@+id/button_reset"
               android:text="Start"
               android:textStyle="italic" />

           <Button
               android:id="@+id/button_reset"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Reset"
               android:background="@color/app_color"
               android:textColor="@color/colorWhite" />

       </LinearLayout>

        <ProgressBar
            android:layout_marginBottom="20dp"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_zikr"
            android:max="10"
            android:progress="0" />

        <TextView
            android:id="@+id/textView_cummulative_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:text="Round: 0" />

        <TextView
            android:id="@+id/text_zikr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textSize="80sp" />

    </RelativeLayout>

</LinearLayout>