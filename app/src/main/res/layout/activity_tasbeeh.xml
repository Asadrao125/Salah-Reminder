<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".activities.TasbeehActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:theme="@style/ToolBarTheme"
          android:background="@color/app_color">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <ImageView
                  android:padding="10dp"
                  android:layout_marginRight="10dp"
                  android:src="@drawable/ic_back"
                  android:layout_width="wrap_content"
                  android:id="@+id/imgBack"
                  android:layout_height="wrap_content" />

              <TextView
                  android:layout_gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Digital Tasbeeh"
                  android:textColor="@color/colorWhite"
                  android:textSize="18sp" />

          </LinearLayout>

      </androidx.appcompat.widget.Toolbar>


      <FrameLayout
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="20dp">

          <RelativeLayout
              android:layout_gravity="center"
              android:id="@+id/targetLayout"
              android:layout_width="200dp"
              android:layout_height="200dp"
              android:orientation="vertical">

              <TextView
                  android:fontFamily="@font/digital"
                  android:id="@+id/text_zikr"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0"
                  android:layout_centerInParent="true"
                  android:textColor="#0aa653"
                  android:layout_marginBottom="20dp"
                  android:textAlignment="center"
                  android:textSize="80sp" />

          </RelativeLayout>

          <ProgressBar
              android:id="@+id/pb"
              android:layout_width="253dp"
              android:layout_height="253dp"
              android:layout_gravity="center"
              android:indeterminate="false"
              android:progressDrawable="@drawable/circular_progress_bar"
              android:background="@drawable/circle_shape"
              style="?android:attr/progressBarStyleHorizontal"
              android:max="100"
              android:progress="65" />

      </FrameLayout>

      <TextView
          android:layout_gravity="center"
          android:textSize="18sp"
          android:textColor="#000"
          android:id="@+id/textView_progress_target"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Target" />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="20dp">

          <LinearLayout
              android:layout_marginTop="20dp"
              android:gravity="center"
              android:layout_below="@+id/textView_cummulative_count"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <Button
                  android:layout_marginRight="20dp"
                  android:id="@+id/button_count"
                  android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:background="@drawable/button_border"
                  android:textColor="@color/colorWhite"
                  android:layout_above="@+id/button_reset"
                  android:text="Start"
                  android:textStyle="italic" />

              <Button
                  android:id="@+id/button_reset"
                  android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:text="Reset"
                  android:background="@drawable/button_border"
                  android:textColor="@color/colorWhite" />

          </LinearLayout>

          <ProgressBar
              android:visibility="gone"
              android:layout_marginBottom="20dp"
              android:id="@+id/progressBar"
              style="?android:attr/progressBarStyleHorizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:max="10"
              android:progress="0" />

          <TextView
              android:id="@+id/textView_cummulative_count"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/progressBar"
              android:layout_centerHorizontal="true"
              android:text="Round: 0" />

      </RelativeLayout>

      <!--<ProgressBar
          android:id="@+id/pb"
          android:layout_width="200dp"
          android:layout_height="200dp"
          android:indeterminate="false"
          android:progressDrawable="@drawable/circular_progress_bar"
          android:background="@drawable/circle_shape"
          style="?android:attr/progressBarStyleHorizontal"
          android:max="100"
          android:progress="65" />-->

  </LinearLayout>

</ScrollView>