<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gexton.salahreminder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/official_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.gexton.salahreminder.activities.SettingsActivity"/>
        <activity android:name="com.gexton.salahreminder.activities.Start" />
        <activity android:name="com.gexton.salahreminder.activities.QiblaCompassActivity" />
        <activity android:name="com.gexton.salahreminder.activities.ZakaatCalculator" />
        <activity android:name="com.gexton.salahreminder.activities.TasbeehActivity" />
        <activity android:name="com.gexton.salahreminder.activities.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.gexton.salahreminder.activities.NamazTimingsActivity" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />

        <receiver
            android:name="com.gexton.salahreminder.utils.ExecutableService"
            android:enabled="true" />
        <receiver
            android:name="com.gexton.salahreminder.utils.Reciever"
            android:enabled="true" />
    </application>

    <uses-feature android:name="android.hardware.location.gps" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

</manifest>